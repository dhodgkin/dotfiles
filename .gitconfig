[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  b = branch
  div = divergence
  pom = push origin master
  fa = fetch --all
  aa = add --all
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  r = !git --no-pager l -20
  ra = !git r --all
  head = !git l -1
  h = !git head

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = red
	untracked = cyan

[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
