startup_message off

escape /
defscrollback 1024
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %H ][%-Lw%{= kw}%50> %n*%f %t%{= kG}%+Lw%< %{= kG}]%-=[%D %m/%d/%y | %C:%s %A]'

#screen -t irssi   0 irssi
screen -t shell1  0
